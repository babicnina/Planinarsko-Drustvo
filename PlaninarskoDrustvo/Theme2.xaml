    <SolidColorBrush x:Key="MenuButtonForeground" Color="#e3e3e3"/>
    <SolidColorBrush x:Key="BorderColorPrimary" Color="#6495ed"/>
    <SolidColorBrush x:Key="ItemLanguageColor" Color="#6495ed"/>
    <SolidColorBrush x:Key="SidemenuIcon" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SidemenuItem" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SideButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuButton" Color="#e3e3e3"/>

    <SolidColorBrush x:Key="TitleColor" Color="#6495ed"/>
    <SolidColorBrush x:Key="TextColor" Color="#FF8395C5"/>
    <SolidColorBrush x:Key="HintTextColor" Color="#FFB2BEE0"/>
    <SolidColorBrush x:Key="BorderBackgroundColor" Color="#FFFFFF" Opacity="0.2"/>
    <SolidColorBrush x:Key="BorderColorAccent" Color="#FF8B9EB8"/>
    <SolidColorBrush x:Key="CursosrForeground" Color="#e3e3e3"/>
